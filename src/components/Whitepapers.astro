---
// Whitepapers section for Innovation Nexus Consulting
const whitepapers = [
  {
    title: "The Green Tech Revolution: Strategic Investment Framework 2024",
    description: "A comprehensive analysis of market opportunities in renewable energy, sustainable manufacturing, and circular economy business models.",
    pages: "42 pages",
    downloads: "2,847",
    category: "Green Technology",
    featured: true
  },
  {
    title: "AI Governance for Enterprise: Building Ethical AI Systems",
    description: "Strategic guidelines for implementing responsible AI practices while maintaining competitive advantage and regulatory compliance.",
    pages: "28 pages", 
    downloads: "1,923",
    category: "Artificial Intelligence"
  },
  {
    title: "Deep Tech Commercialization: From Lab to Market",
    description: "Navigate the unique challenges of bringing breakthrough technologies from research institutions to commercial success.",
    pages: "35 pages",
    downloads: "1,456",
    category: "Deep Technology"
  },
  {
    title: "Quantum Computing Market Readiness Assessment",
    description: "Evaluate quantum computing applications for enterprise adoption and investment timing across industries.",
    pages: "31 pages",
    downloads: "987",
    category: "Quantum Technology"
  },
  {
    title: "Climate Tech Investment Thesis 2024-2026",
    description: "Market analysis and investment opportunities in climate technology sectors with highest growth potential.",
    pages: "48 pages",
    downloads: "2,134",
    category: "Climate Technology"
  },
  {
    title: "Innovation Metrics That Matter: KPIs for Technology Leaders",
    description: "Data-driven approaches to measuring innovation performance and ROI in technology-driven organizations.",
    pages: "22 pages",
    downloads: "3,421",
    category: "Innovation Management"
  }
];
---

<section id="insights" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Strategic Insights & Research
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Download comprehensive reports and strategic frameworks developed from real-world 
        consulting experience with industry leaders.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {whitepapers.map((paper) => (
        <div class={`bg-white hover:shadow-xl transition-all duration-300 hover:-translate-y-1 rounded-xl shadow-lg p-8 ${paper.featured ? 'ring-2 ring-emerald-500 ring-opacity-50' : ''}`}>
          {paper.featured && (
            <div class="inline-block px-3 py-1 bg-emerald-100 text-emerald-800 text-xs font-semibold rounded-full mb-4">
              Featured Report
            </div>
          )}
          
          <div class="flex items-start mb-4">
            <svg class="w-8 h-8 text-emerald-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <div>
              <div class="text-sm text-emerald-600 font-medium mb-2">{paper.category}</div>
              <h3 class="text-lg font-bold text-gray-900 leading-tight mb-3">
                {paper.title}
              </h3>
            </div>
          </div>

          <p class="text-gray-600 mb-6 leading-relaxed">
            {paper.description}
          </p>

          <div class="flex justify-between items-center mb-6 text-sm text-gray-500">
            <span>{paper.pages}</span>
            <span>{paper.downloads} downloads</span>
          </div>

          <button 
            class="w-full bg-emerald-600 hover:bg-emerald-700 text-white py-3 px-4 rounded-lg font-medium transition-colors duration-200 download-btn"
            data-title={paper.title}
          >
            Download PDF
          </button>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-emerald-50 to-green-50 rounded-2xl p-12">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          Want Custom Research?
        </h3>
        <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
          Need industry-specific analysis or custom strategic frameworks? 
          I develop tailored research reports for executive teams and investment committees.
        </p>
        <button 
          data-scroll-to="contact"
          class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-4 text-lg rounded-lg font-medium transition-colors duration-200 shadow-lg hover:shadow-xl"
        >
          Request Custom Research
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  // Handle download buttons
  const downloadButtons = document.querySelectorAll('.download-btn');
  
  downloadButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      const title = (e.target as HTMLElement).getAttribute('data-title');
      if (title) {
        console.log(`Downloading: ${title}`);
        // In a real application, this would trigger the actual download
        // You could integrate with a form service or CRM here
        alert(`Download initiated for: ${title}`);
      }
    });
  });

  // Handle scroll to contact button
  const scrollButton = document.querySelector('[data-scroll-to="contact"]');
  scrollButton?.addEventListener('click', () => {
    const element = document.getElementById('contact');
    if (element) {
      element.scrollIntoView({ behavior: 'smooth' });
    }
  });
</script>
