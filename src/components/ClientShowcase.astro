---
// Client Showcase section for Innovation Nexus Consulting
const testimonials = [
  {
    quote: "Alexandra's strategic guidance was instrumental in our $200M clean energy pivot. Her deep understanding of both technology and market dynamics is unparalleled.",
    author: "Sarah Johnson",
    title: "CEO, EnergyTech Solutions",
    company: "Fortune 500 Energy"
  },
  {
    quote: "The AI strategy framework Alexandra developed transformed our approach to innovation. We've seen 40% faster time-to-market on new products.",
    author: "Michael Chen",
    title: "Chief Innovation Officer",
    company: "Global Manufacturing Leader"
  },
  {
    quote: "Alexandra's investment thesis on quantum computing helped us identify and secure partnerships that are now worth over $500M in market value.",
    author: "Dr. Emily Rodriguez",
    title: "Managing Partner",
    company: "Tier 1 VC Fund"
  }
];

const clientLogos = [
  { name: "TechCorp", logo: "TC" },
  { name: "GreenEnergy", logo: "GE" },
  { name: "Innovation Labs", logo: "IL" },
  { name: "Future Systems", logo: "FS" },
  { name: "CleanTech Ventures", logo: "CV" },
  { name: "Quantum Dynamics", logo: "QD" },
  { name: "BioTech Solutions", logo: "BS" },
  { name: "AI Innovations", logo: "AI" }
];
---

<section id="clients" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Trusted by Industry Leaders
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Working with Fortune 500 companies, innovative startups, and leading investment firms 
        to drive transformational growth in emerging technology sectors.
      </p>
    </div>

    <!-- Client Logos -->
    <div class="mb-20">
      <p class="text-center text-gray-500 mb-8 uppercase tracking-wide text-sm">
        Trusted by Leading Organizations
      </p>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-8 items-center">
        {clientLogos.map((client) => (
          <div class="flex justify-center">
            <div class="w-16 h-16 bg-white rounded-lg shadow-md flex items-center justify-center text-gray-600 font-bold text-lg border border-gray-100 hover:shadow-lg transition-shadow">
              {client.logo}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Testimonials -->
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white border-0 shadow-lg hover:shadow-xl transition-shadow rounded-xl p-8">
          <div class="mb-6">
            <div class="text-orange-600 text-4xl mb-4">"</div>
            <p class="text-gray-700 leading-relaxed">
              {testimonial.quote}
            </p>
          </div>
          <div class="border-t pt-6">
            <div class="font-semibold text-gray-900">{testimonial.author}</div>
            <div class="text-sm text-gray-600">{testimonial.title}</div>
            <div class="text-sm text-orange-600 font-medium">{testimonial.company}</div>
          </div>
        </div>
      ))}
    </div>

    <!-- Background Section -->
    <div class="mt-20 bg-white rounded-2xl p-12 shadow-lg">
      <div class="max-w-4xl mx-auto">
        <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          Professional Background
        </h3>
        <div class="grid md:grid-cols-2 gap-12">
          <div>
            <h4 class="text-xl font-semibold text-gray-900 mb-4">Experience</h4>
            <div class="space-y-4">
              <div class="flex">
                <div class="w-3 h-3 bg-orange-600 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                <div>
                  <div class="font-medium text-gray-900">Partner, McKinsey & Company</div>
                  <div class="text-sm text-gray-600">2015-2020 • Innovation & Technology Practice</div>
                </div>
              </div>
              <div class="flex">
                <div class="w-3 h-3 bg-orange-600 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                <div>
                  <div class="font-medium text-gray-900">Principal, Boston Consulting Group</div>
                  <div class="text-sm text-gray-600">2012-2015 • Technology Ventures</div>
                </div>
              </div>
              <div class="flex">
                <div class="w-3 h-3 bg-orange-600 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                <div>
                  <div class="font-medium text-gray-900">Senior Scientist, Tesla</div>
                  <div class="text-sm text-gray-600">2008-2012 • Battery Technology</div>
                </div>
              </div>
            </div>
          </div>
          <div>
            <h4 class="text-xl font-semibold text-gray-900 mb-4">Education & Recognition</h4>
            <div class="space-y-4">
              <div class="flex">
                <div class="w-3 h-3 bg-orange-600 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                <div>
                  <div class="font-medium text-gray-900">PhD Materials Science</div>
                  <div class="text-sm text-gray-600">MIT • Summa Cum Laude</div>
                </div>
              </div>
              <div class="flex">
                <div class="w-3 h-3 bg-orange-600 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                <div>
                  <div class="font-medium text-gray-900">MS Electrical Engineering</div>
                  <div class="text-sm text-gray-600">Stanford University</div>
                </div>
              </div>
              <div class="flex">
                <div class="w-3 h-3 bg-orange-600 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                <div>
                  <div class="font-medium text-gray-900">Innovation Leadership Award</div>
                  <div class="text-sm text-gray-600">World Economic Forum 2023</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
