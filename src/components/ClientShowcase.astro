---
// Client Showcase section for Innovation Nexus Consulting
import { getClientsContent } from '../lib/content.ts';

const clientsContent = getClientsContent();
const testimonials = clientsContent.testimonials || [];
const clientLogos = clientsContent.clientLogos || [];
---

<section id="clients" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        {clientsContent.title || "Trusted by Industry Leaders"}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {clientsContent.description || "Working with Fortune 500 companies, innovative startups, and leading investment firms to drive transformational growth in emerging technology sectors."}
      </p>
    </div>

    <!-- Client Logos Carousel -->
    <div class="mb-20">
      <p class="text-center text-gray-500 mb-8 uppercase tracking-wide text-sm">
        Trusted by Leading Organizations
      </p>
      <div class="relative overflow-hidden bg-white rounded-2xl shadow-sm border border-gray-100 py-8">
        <div class="logo-carousel flex items-center space-x-12">
          <!-- First set of logos -->
          {clientLogos.map((client) => (
            <div class="flex-shrink-0 flex items-center justify-center bg-white rounded-lg p-4 hover:shadow-md transition-shadow">
              {client.logo.endsWith('.png') || client.logo.endsWith('.jpg') || client.logo.endsWith('.svg') ? (
                <img
                  src={client.logo}
                  alt={`${client.name} logo`}
                  class="h-16 w-auto object-contain transition-all duration-300 hover:scale-105"
                  loading="lazy"
                />
              ) : (
                <div class="h-16 w-20 bg-gray-100 rounded flex items-center justify-center">
                  <span class="text-gray-600 font-bold text-sm">{client.logo}</span>
                </div>
              )}
            </div>
          ))}
          <!-- Duplicate set for seamless loop -->
          {clientLogos.map((client) => (
            <div class="flex-shrink-0 flex items-center justify-center bg-white rounded-lg p-4 hover:shadow-md transition-shadow">
              {client.logo.endsWith('.png') || client.logo.endsWith('.jpg') || client.logo.endsWith('.svg') ? (
                <img
                  src={client.logo}
                  alt={`${client.name} logo`}
                  class="h-16 w-auto object-contain transition-all duration-300 hover:scale-105"
                  loading="lazy"
                />
              ) : (
                <div class="h-16 w-20 bg-gray-100 rounded flex items-center justify-center">
                  <span class="text-gray-600 font-bold text-sm">{client.logo}</span>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Testimonials -->
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white border-0 shadow-lg hover:shadow-xl transition-shadow rounded-xl p-8">
          <div class="mb-6">
            <div class="text-orange-600 text-4xl mb-4">"</div>
            <p class="text-gray-700 leading-relaxed">
              {testimonial.quote}
            </p>
          </div>
          <div class="border-t pt-6">
            <div class="font-semibold text-gray-900">{testimonial.author}</div>
            <div class="text-sm text-gray-600">{testimonial.title}</div>
            <div class="text-sm text-orange-600 font-medium">{testimonial.company}</div>
          </div>
        </div>
      ))}
    </div>

    <!-- Background Section -->
    <div class="mt-20 bg-white rounded-2xl p-12 shadow-lg">
      <div class="max-w-4xl mx-auto">
        <h3 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          {clientsContent.backgroundTitle || "Professional Background"}
        </h3>
        <div class="grid md:grid-cols-2 gap-12">
          <div>
            <h4 class="text-xl font-semibold text-gray-900 mb-4">Experience</h4>
            <div class="space-y-4">
              {clientsContent.experience && clientsContent.experience.map((exp: any) => (
                <div class="flex">
                  <div class="w-3 h-3 bg-orange-600 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                  <div>
                    <div class="font-medium text-gray-900">{exp.role}</div>
                    <div class="text-sm text-gray-600">{exp.period}</div>
                  </div>
                </div>
              ))}
            </div>
          </div>
          <div>
            <h4 class="text-xl font-semibold text-gray-900 mb-4">Education & Recognition</h4>
            <div class="space-y-4">
              {clientsContent.education && clientsContent.education.map((edu: any) => (
                <div class="flex">
                  <div class="w-3 h-3 bg-orange-600 rounded-full mt-2 mr-4 flex-shrink-0"></div>
                  <div>
                    <div class="font-medium text-gray-900">{edu.degree}</div>
                    <div class="text-sm text-gray-600">{edu.institution}</div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .logo-carousel {
    animation: scroll-left 30s linear infinite;
  }

  .logo-carousel:hover {
    animation-play-state: paused;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Ensure smooth scrolling on all devices */
  @media (prefers-reduced-motion: reduce) {
    .logo-carousel {
      animation: none;
    }
  }
</style>
