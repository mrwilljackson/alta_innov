{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "page",
      "pageBundle": false,
      "previewPath": "'/'",
      "filePrefix": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Layout",
          "name": "layout",
          "type": "string",
          "default": "../layouts/Layout.astro"
        }
      ]
    },
    {
      "name": "content",
      "pageBundle": false,
      "previewPath": null,
      "filePrefix": null,
      "fields": [
        {
          "title": "Content Title",
          "name": "contentTitle",
          "type": "string",
          "description": "Descriptive title for this content section (for CMS organization only)"
        },
        {
          "title": "Section",
          "name": "section",
          "type": "choice",
          "choices": ["hero", "navigation", "expertise", "clients", "insights", "contact"]
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Subtitle",
          "name": "subtitle",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "wysiwyg": true
        },
        {
          "title": "Image",
          "name": "image",
          "type": "image"
        },
        {
          "title": "Image Alt Text",
          "name": "imageAlt",
          "type": "string"
        },
        {
          "title": "Button Text",
          "name": "buttonText",
          "type": "string"
        },
        {
          "title": "Button Link",
          "name": "buttonLink",
          "type": "string"
        },
        {
          "title": "Statistics",
          "name": "statistics",
          "type": "fields",
          "fields": [
            {
              "title": "Value",
              "name": "value",
              "type": "string"
            },
            {
              "title": "Label",
              "name": "label",
              "type": "string"
            }
          ]
        },
        {
          "title": "Features",
          "name": "features",
          "type": "fields",
          "fields": [
            {
              "title": "Icon",
              "name": "icon",
              "type": "string"
            },
            {
              "title": "Title",
              "name": "title",
              "type": "string"
            },
            {
              "title": "Description",
              "name": "description",
              "type": "string"
            },
            {
              "title": "Highlights",
              "name": "highlights",
              "type": "list"
            }
          ]
        }
      ]
    }
  ],
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "Website Content",
      "path": "[[workspace]]/src/content",
      "contentTypes": ["content"]
    }
  ],
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.dashboard.openOnStart": false,
  "frontMatter.content.draftField": {
    "name": "draft",
    "type": "boolean"
  },
  "frontMatter.dashboard.content.cardFields": {
    "title": "contentTitle",
    "description": "description",
    "date": "lastmod"
  },
  "frontMatter.content.sorting": [
    {
      "title": "Last modified (desc)",
      "name": "lastmod",
      "order": "desc"
    },
    {
      "title": "Content Title (asc)",
      "name": "contentTitle",
      "order": "asc"
    }
  ],
  "frontMatter.dashboard.content.pagination": false,
  "frontMatter.content.autoUpdateDate": true,
  "frontMatter.content.defaultSorting": "lastmod",
  "frontMatter.dashboard.content.filters": [
    {
      "title": "All content",
      "value": ""
    },
    {
      "title": "Hero Section",
      "value": "section:hero"
    },
    {
      "title": "Navigation",
      "value": "section:navigation"
    },
    {
      "title": "Services",
      "value": "section:expertise"
    },
    {
      "title": "Clients",
      "value": "section:clients"
    },
    {
      "title": "Research",
      "value": "section:insights"
    },
    {
      "title": "Contact",
      "value": "section:contact"
    }
  ]
}
